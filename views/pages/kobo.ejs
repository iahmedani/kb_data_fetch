<% layout('boilerplate') %>
  <h1 class="display-3">Add connector</h1>
  <p class="display-5">Add connector for Kobo or Ona</p>
  <div class="container">
    <div class="container">
      <form method="post">
        <div class="form-group row">
          <label for="name" class="col-sm-1-12 col-form-label"></label>
          <div class="col-sm-1-12">
            <input type="text" class="form-control" name="name" placeholder="Connection Name">
          </div>
        </div>
        <div class="form-group row">
          <label for="url" class="col-sm-1-12 col-form-label">Link</label>
          <div class="col-sm-1-12">
            <input type="url" class="form-control" name="url" placeholder="Web url">
          </div>
        </div>
        <div class="form-group row">
          <label for="token" class="col-sm-1-12 col-form-label">Key</label>
          <div class="col-sm-1-12">
            <input type="url" class="form-control" name="token" placeholder="Tokin">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>